{
   "compilerOptions": {
      "lib": [
         "ESNext",
         "ESNext.String"
      ],
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "types": ["jest"]
   },
   
   "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",   
      "./jest.config.ts",
      "./tests"
    ]
}